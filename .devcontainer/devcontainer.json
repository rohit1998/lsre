{
    "name": "Sample Python Project",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "dev_service",
    "workspaceFolder": "/home/appuser/app",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
                "python.terminal.activateEnvironment": true,
                "python.terminal.activateEnvInCurrentTerminal": true,
                "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono"
            },
            "extensions": [
                // ide
                "ms-azuretools.vscode-docker",
                "aaron-bond.better-comments",
                "njpwerner.autodocstring",
                "eamodio.gitlens",
                "formulahendry.code-runner",
                "christian-kohler.path-intellisense",
                // language
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "tamasfe.even-better-toml",
                "marimo-team.vscode-marimo",
                // code quality
                "charliermarsh.ruff",
                "streetsidesoftware.code-spell-checker",
                "davidanson.vscode-markdownlint",
                // github actions
                "github.vscode-github-actions",
                // file helpers
                "george-alisson.html-preview-vscode",
                "tomoki1207.pdf"
            ]
        }
    },
    "remoteUser": "appuser",

    "forwardPorts": [],
    "postCreateCommand": "bash ./.devcontainer/post-create.sh",
    "mounts": [
        "source=zsh-history-sample-python-project,target=/home/appuser/commandhistory,type=volume",
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/appuser/.ssh,type=bind,consistency=cached",
        "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
    ],
    "remoteEnv": {
        "SSH_AUTH_SOCK": "/ssh-agent"
    }
}
